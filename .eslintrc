{
  "extends": "react-app",
  "env": {
    "es6": true,
    "jest": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "semi": [2, "always"],
    "no-console": 0,
    "no-shadow": [ "error", { "allow": ["error", "err", "done", "resolve", "reject"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-no-bind": 0,
    "no-use-before-define": 0,
    "max-len": 0,
    "consistent-return": 0,
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.jsx",
          "**/*.config.js"
        ]
      }
    ]
  }
}
